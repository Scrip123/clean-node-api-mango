    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "express": "^4.18.2",
    "fast-glob": "^3.2.12",
    "jsonwebtoken": "^9.0.1",
    "module-alias": "^2.2.3",
    "mongodb": "^3.3.5",
    "validator": "^13.9.0"
  },
  "_moduleAliases": {
    "@presentation": "dist/presentation",
    "@domain": "dist/domain",
    "@utils": "dist/utils",
    "@data": "dist/data",
    "@infra": "dist/infra",
    "@main": "dist/main"
  }
