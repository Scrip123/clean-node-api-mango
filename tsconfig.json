{
  "ts-node": {
    //"require": ["tsconfig-paths/register"]
},
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "sourceMap": true,
    "paths": {
      "@presentation/*": ["presentation/*"],
      "@domain/*":["domain/*"],
      "@utils/*":["utils/*"],
      "@data/*":["data/*"],
      "@infra/*":["infra/*"],
      "@main/*":["main/*"],
      "@validation/*":["validation/*"]
    },
    "esModuleInterop": true
  },
  "include": ["src"]
}
