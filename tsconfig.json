{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
},
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "paths": {
      "@presentation/*": ["presentation/*"],
      "@domain/*":["domain/*"],
      "@utils/*":["utils/*"],
      "@data/*":["data/*"],
      "@infra/*":["infra/*"],
      "@main/*":["main/*"]
    },
    "esModuleInterop": true,
  },
  "include": ["src"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
